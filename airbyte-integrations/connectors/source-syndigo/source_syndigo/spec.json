{
  "documentationUrl": "https://docx.syndigo.com/",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Syndigo Spec",
    "type": "object",
    "required": [
      "username",
      "secret_key",
      "search_product_request"
    ],
    "properties": {
      "username": {
        "title": "Username",
        "type": "string",
        "order": 1,
        "group": "auth",
        "description": "Your Syndigo auth user name. See <a href=\"https://docx.syndigo.com/developers/docs/api-authentication-1\">here</a>."
      },
      "secret_key": {
        "title": "Secret Key",
        "type": "string",
        "order": 2,
        "group": "auth",
        "description": "Your URL encoded secret. See <a href=\"https://docx.syndigo.com/developers/docs/api-authentication-1\">here</a>.",
        "airbyte_secret": true
      },
      "search_product_request": {
        "type": "object",
        "order": 3,
        "group": "search_product_request",
        "properties": {
          "query": {
            "title": "Query Params",
            "type": "array",
            "order": 1,
            "always_show": true,
            "description": "Add query param for the request",
            "items": {
              "title": "Query Params",
              "type": "object",
              "required": [
                "key",
                "value"
              ],
              "properties": {
                "key": {
                  "type": "string",
                  "title": "Query Param",
                  "description": "Query Param",
                  "order": 1
                },
                "value": {
                  "type": "string",
                  "title": "Query Param Value",
                  "description": "Query Param Value",
                  "order": 2
                }
              }
            }
          },
          "body": {
            "title": "Request Body",
            "type": "object",
            "order": 2,
            "always_show": true,
            "description": "Add request body",
            "required": [
              "DataOwner"
            ],
            "properties": {
              "DataOwner": {
                "title": "Company ID",
                "type": "string",
                "order": 1,
                "always_show": true,
                "description": "Company ID GUID"
              },
              "TargetPartyId": {
                "title": "Target Party ID",
                "type": "string",
                "order": 2,
                "description": "Sets the lens through which the product data is returned from search. Accepted Values: Recipient identifier: GUID or as aliased in customer vocab"
              },
              "OrderBy": {
                "title": "Order By Attribute ID",
                "type": "string",
                "order": 3,
                "description": "Sets return results order. Accepted Values: Attribute GUID (Ex. Product Name, Date Created, etc.)."
              },
              "AttributeFilterOperator": {
                "title": "Attribute Filter Operator",
                "type": "string",
                "default": "And",
                "order": 4,
                "description": "Defaults to AND",
                "enum": [
                  "And",
                  "Or"
                ]
              },
              "DateFilters": {
                "title": "Date Filters",
                "type": "array",
                "order": 5,
                "description": "Searched date field and defined.",
                "items": {
                  "title": "Date Filter Details",
                  "type": "object",
                  "required": [
                    "Name",
                    "Operator",
                    "Value",
                    "IncludeMissing"
                  ],
                  "properties": {
                    "Name": {
                      "title": "Name",
                      "type": "string",
                      "order": 1,
                      "enum": [
                        "CreatedDate",
                        "RecordDate",
                        "LastModifiedDate",
                        "DiscontinueDate",
                        "ObsolescenceDate",
                        "LastPublishedDate"
                      ],
                      "description": "Part of DateFilter"
                    },
                    "Operator": {
                      "title": "Operator",
                      "type": "string",
                      "order": 2,
                      "enum": [
                        "LessThan",
                        "LessThanOrEqualTo",
                        "GreaterThan",
                        "GreaterThanOrEqualTo"
                      ],
                      "description": "Part of DateFilter"
                    },
                    "Value": {
                      "title": "Value",
                      "type": "string",
                      "order": 3,
                      "description": "Commonly acceptable string representation of a date/time"
                    },
                    "IncludeMissing": {
                      "title": "Include Missing Values",
                      "type": "boolean",
                      "default": true,
                      "order": 4,
                      "description": "Part of DateFilter"
                    }
                  }
                }
              },
              "AttributeFilters": {
                "title": "Attribute Filters",
                "type": "array",
                "order": 6,
                "description": "Searches the value of attribute defined.",
                "items": {
                  "title": "Attribute Filter Details",
                  "type": "object",
                  "required": [
                    "AttributeId",
                    "Values"
                  ],
                  "properties": {
                    "AttributeId": {
                      "title": "Attribute ID",
                      "type": "string",
                      "order": 1,
                      "description": "Searches the value of attribute defined."
                    },
                    "Values": {
                      "title": "Attribute Values",
                      "type": "array",
                      "order": 2,
                      "description": "List of string values for attribute values",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              },
              "OnHold": {
                "title": "OnHold Flag",
                "type": "boolean",
                "default": false,
                "order": 7,
                "description": "Determines if the search returns OnHold products or not."
              },
              "Desc": {
                "title": "Descending Order Flag",
                "type": "boolean",
                "default": true,
                "order": 8,
                "description": "Determines sort order (ascending or descending)."
              },
              "Archived": {
                "title": "Archived Flag",
                "type": "boolean",
                "default": false,
                "order": 9,
                "description": "Determines if the search returns Archived products or not."
              }
            }
          }
        }
      }
    },
    "groups": [
      {
        "id": "auth",
        "title": "Authentication"
      },
      {
        "id": "search_product_request",
        "title": "[POST] Search Product"
      }
    ]
  }
}
